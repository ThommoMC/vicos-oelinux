<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1.0">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/securityTestButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TestSecurity" />
            <TextView
                android:id="@+id/securityTestResult"
                android:layout_width="200dip"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <EditText
                android:id="@+id/signalIdEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dip" />
            <CheckBox
                android:id="@+id/onChangeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/OnChange" />
            <Button
                android:id="@+id/registerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Register" />
            <Button
                android:id="@+id/unregisterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Unregister" />
            <TextView
                android:id="@+id/regTestResult"
                android:layout_width="200dip"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
