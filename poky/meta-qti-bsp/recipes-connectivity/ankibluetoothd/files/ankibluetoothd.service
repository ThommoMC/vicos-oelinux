[Unit]
Description=Anki Bluetooth Daemon
SourcePath=/etc/initscripts/start_ankibluetoothd
Requires=btproperty.service ankiinit.service leprop.service
After=btproperty.service ankiinit.service leprop.service

[Service]
Restart=no
RemainAfterExit=yes
ExecStart=/etc/initscripts/start_ankibluetoothd start
ExecStop=/etc/initscripts/start_ankibluetoothd stop

[Install]
WantedBy=multi-user.target
