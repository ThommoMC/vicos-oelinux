#! /bin/sh

set -e

case "$1" in
  start)
    echo -n "Starting ankibluetoothd: "
    start-stop-daemon -S -b -a /usr/bin/ankibluetoothd
    echo "done"
    ;;
  stop)
    echo -n "Stopping ankibluetoothd: "
    start-stop-daemon -K -n ankibluetoothd
    echo "done"
    ;;
  restart)
    $0 stop
    $0 start
    ;;
  *)
    echo "Usage ankibluetoothd { start | stop | restart }" >&2
    exit 1
    ;;
esac

exit 0
