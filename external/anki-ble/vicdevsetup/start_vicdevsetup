#! /bin/sh

set -e

case "$1" in
  start)
    echo -n "Starting vicdevsetup: "
    start-stop-daemon -S -b -a /usr/bin/vicdevsetup
    echo "done"
    ;;
  stop)
    echo -n "Stopping vicdevsetup: "
    start-stop-daemon -K -n /usr/bin/vicdevsetup
    echo "done"
    ;;
  restart)
    $0 stop
    $0 start
    ;;
  *)
    echo "Usage vicdevsetup { start | stop | restart }" >&2
    exit 1
    ;;
esac

exit 0
